[
    {
        "shell": [
            {
                "command": "command -v emacs >/dev/null 2>&1 || echo 'emacs not installed'; exit 0",
                "stderr": true,
                "stdin": true,
                "stdout": true
            }
        ]
    },
    {
        "clean": ["$HOME/.emacs.d"]
    },
    {
        "link": {
            "$HOME/.emacs.d/init.el": {
                "create": true,
                "path": "init.el"
            },
            "$HOME/.emacs.d/early-init.el": {
                "create": true,
                "path": "early-init.el"
            },
            "$HOME/.emacs.d/src": {
                "create": true,
                "path": "src"
            }
        }
    }
]
