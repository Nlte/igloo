[
    {
        "shell": [
            {
                "command": "command -v emacs >/dev/null 2>&1 || echo 'emacs not installed'; exit 0",
                "stderr": true,
                "stdin": true,
                "stdout": true
            }
        ]
    },
    {
        "clean": ["$HOME/.emacs.d"]
    },
    {
        "link": {
            "$HOME/.emacs.d/init.el": {
                "create": true,
                "path": "emacs/init.el"
            },
            "$HOME/.emacs.d/early-init.el": {
                "create": true,
                "path": "emacs/early-init.el"
            },
            "$HOME/.emacs.d/core.el": {
                "create": true,
                "path": "emacs/core.el"
            },
            "$HOME/.emacs.d/lisp": {
                "create": true,
                "path": "emacs/lisp"
            },
            "$HOME/.emacs.d/.projectile": {
                "create": true,
                "path": "emacs/.projectile"
            },
            "$HOME/.emacs.d/install": {
                "create": true,
                "path": "emacs/install"
            }
        }
    }
]
